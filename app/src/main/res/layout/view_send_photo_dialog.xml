<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/chooseFromGalleryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="130dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toTopOf="@id/chooseFromGalleryTitle"
        app:layout_constraintEnd_toStartOf="@id/takePhotoIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_image_add"
            app:tint="@color/on_primary" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/chooseFromGalleryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="@string/choose_from_gallery"
        android:textColor="@color/on_background"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/chooseFromGalleryIcon"
        app:layout_constraintStart_toStartOf="@id/chooseFromGalleryIcon"
        app:layout_constraintTop_toBottomOf="@id/chooseFromGalleryIcon" />

    <androidx.cardview.widget.CardView
        android:id="@+id/takePhotoIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="130dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toTopOf="@id/takePhotoTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chooseFromGalleryIcon"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_photo_add"
            app:tint="@color/on_primary" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/takePhotoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="@string/take_a_photo"
        android:textColor="@color/on_background"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/takePhotoIcon"
        app:layout_constraintStart_toStartOf="@id/takePhotoIcon"
        app:layout_constraintTop_toBottomOf="@id/takePhotoIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>